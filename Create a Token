pragma solidity 0.8.18;

contract MyToken {
    string public coinName;
    string public coinAbbreviation;
    uint256 public coinTotalSupply;

    mapping(address => uint256) public addressBalances;

    constructor(string memory _name, string memory _abbrv, uint256 _initialSupply) {
        coinName = _name;
        coinAbbreviation = _abbrv;
        coinTotalSupply = _initialSupply;
        addressBalances[msg.sender] = _initialSupply;
    }

    function mint(address recipient, uint256 amount) public {
        coinTotalSupply += amount;
        addressBalances[recipient] += amount;
    }

    function burn(address account, uint256 amount) public {
        require(addressBalances[account] >= amount, "Insufficient balance to burn");
        coinTotalSupply -= amount;
        addressBalances[account] -= amount;
    }
}
